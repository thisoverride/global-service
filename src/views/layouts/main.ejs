<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Console de Gestion des Emails</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/assets/css/style.css">
  <%- typeof styles !== 'undefined' ? styles : '' %>
</head>

<body>
  <!-- Navigation principale -->
  <nav class="top-nav">
    <div class="top-nav-left">
      <div class="logo">
        <a href="/"><i class="fab fa-aws"></i></a>
      </div>
      <button class="services-button" id="servicesButton">
        <i class="fas fa-th"></i>
        Services
        <i class="fas fa-caret-down"></i>
      </button>
    </div>
    <div class="top-nav-right">
      <i class="fas fa-bell"></i>
      <i class="fas fa-user-circle"></i>
      <span>Admin</span>
    </div>
  </nav>

  <!-- Panneau des services -->
  <div class="services-panel" id="servicesPanel">
    <div class="services-search">
      <input type="text" class="search-input" placeholder="Rechercher un service..." id="serviceSearch">
    </div>
    <div class="services-grid">
      <!-- Email & Communication -->
      <div class="service-category">
        <h3>Email & Communication</h3>
        <div class="service-list">
          <a href="#" class="nav-item">
            <i class="fas fa-envelope"></i>
            <span>Email Service</span>
          </a>
          <a href="#" class="nav-item">
            <i class="fas fa-paper-plane"></i>
            <span>Campaign Manager</span>
          </a>
        </div>
      </div>

      <!-- Sécurité -->
      <div class="service-category">
        <h3>Sécurité</h3>
        <div class="service-list">
          <a href="#" class="nav-item">
            <i class="fas fa-shield-alt"></i>
            <span>Gestion des accès</span>
          </a>
          <a href="#" class="nav-item">
            <i class="fas fa-key"></i>
            <span>Clés API</span>
          </a>
        </div>
      </div>

      <!-- Surveillance -->
      <div class="service-category">
        <h3>Surveillance</h3>
        <div class="service-list">
          <a href="#" class="nav-item">
            <i class="fas fa-chart-line"></i>
            <span>Métriques</span>
          </a>
          <a href="#" class="nav-item">
            <i class="fas fa-history"></i>
            <span>Logs</span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Sidebar principale -->
  <aside class="sidebar">
    <nav class="nav-menu">
      <a href="#dashboard" class="nav-item">
        <i class="fas fa-home"></i>
        <span>Tableau de bord</span>
      </a>
      <a href="#applications" class="nav-item">
        <i class="fas fa-th-large"></i>
        <span>Applications</span>
      </a>
      <a href="#templates" class="nav-item">
        <i class="fas fa-envelope"></i>
        <span>Modèles</span>
      </a>
      <a href="#security" class="nav-item">
        <i class="fas fa-shield-alt"></i>
        <span>Sécurité</span>
      </a>
      <a href="#monitoring" class="nav-item">
        <i class="fas fa-chart-line"></i>
        <span>Surveillance</span>
      </a>
    </nav>
  </aside>

  <!-- Contenu principal -->
  <main class="main-content">
    <%- body %>
  </main>
  <!-- Suite du code précédent -->

</body>

</html>