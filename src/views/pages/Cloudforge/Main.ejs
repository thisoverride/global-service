<section class="vm-section">
  <div class="section-header">
      <h1>Machines Virtuelles</h1>
      <button class="btn btn-primary">
          <i class="fas fa-plus"></i>
          Nouvelle VM
      </button>
  </div>

  <div class="filters-bar">
      <div class="search-box">
          <i class="fas fa-search"></i>
          <input type="text" placeholder="Rechercher une VM...">
      </div>
      <div class="filters">
          <select class="form-select">
              <option value="">Statut</option>
              <option value="running">En cours</option>
              <option value="stopped">Arrêtée</option>
              <option value="pending">En attente</option>
          </select>
          <select class="form-select">
              <option value="">Types</option>
              <option value="t2.micro">t2.micro</option>
              <option value="t2.small">t2.small</option>
              <option value="t2.medium">t2.medium</option>
          </select>
      </div>
  </div>

  <div class="vm-grid">

      <div class="vm-card">
          <div class="vm-header">
              <div class="vm-status-badge status-running"></div>
              <div class="vm-name">Production Server</div>
              <div class="vm-id">vm-prod-01</div>
          </div>
          <div class="vm-details">
              <div class="vm-info-grid">
                  <span class="vm-label">Type:</span>
                  <span class="vm-value">t2.medium</span>
                  
                  <span class="vm-label">Image:</span>
                  <span class="vm-value">Ubuntu 20.04 LTS</span>
                  
                  <span class="vm-label">IP:</span>
                  <span class="vm-value">172.16.0.10</span>
                  
                  <span class="vm-label">Stockage:</span>
                  <span class="vm-value">50 GB</span>
              </div>
          </div>
          <div class="vm-actions">
              <button class="vm-btn btn-stop" title="Arrêter">
                  <i class="fas fa-power-off"></i>
              </button>
              <button class="vm-btn btn-restart" title="Redémarrer">
                  <i class="fas fa-sync"></i>
              </button>
              <button class="vm-btn" title="Modifier">
                  <i class="fas fa-edit"></i>
              </button>
              <button class="vm-btn" title="Supprimer">
                  <i class="fas fa-trash"></i>
              </button>
          </div>
      </div>

      <div class="vm-card">
          <div class="vm-header">
              <div class="vm-status-badge status-stopped"></div>
              <div class="vm-name">Development Server</div>
              <div class="vm-id">vm-dev-01</div>
          </div>
          <div class="vm-details">
              <div class="vm-info-grid">
                  <span class="vm-label">Type:</span>
                  <span class="vm-value">t2.micro</span>
                  
                  <span class="vm-label">Image:</span>
                  <span class="vm-value">Debian 11</span>
                  
                  <span class="vm-label">IP:</span>
                  <span class="vm-value">172.16.0.11</span>
                  
                  <span class="vm-label">Stockage:</span>
                  <span class="vm-value">20 GB</span>
              </div>
          </div>
          <div class="vm-actions">
              <button class="vm-btn btn-start" title="Démarrer">
                  <i class="fas fa-power-off"></i>
              </button>
              <button class="vm-btn" title="Modifier">
                  <i class="fas fa-edit"></i>
              </button>
              <button class="vm-btn" title="Supprimer">
                  <i class="fas fa-trash"></i>
              </button>
          </div>
      </div>
  </div>
</section>